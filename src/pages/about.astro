---
// component imports
import { Image } from '@astrojs/image/components'
import Link from '../components/Link.astro'
import MainLayout from '../layouts/MainLayout.astro'
---

<MainLayout title='About' description='My about page'>
	<section class='container about' aria-label='About Me'>
		<Image
			src='/public/images/headshot.jpg'
			alt='My headshot'
			width={200}
			height={330}
			format='avif'
			fit='cover'
			quality={80}
		/>
		<div class='content'>
			<h1 class='h1'>My Blog</h1>
			<p>
				Lorem ipsum, dolor sit amet consectetur adipisicing elit. Error
				veritatis nemo repudiandae eius minima fugit, ipsa illum neque fugiat
				itaque officiis doloremque cupiditate ratione, consectetur voluptatem,
				corporis est numquam dolor officia! Maiores explicabo necessitatibus
				obcaecati debitis labore enim in! Impedit.
			</p>
			<Link
				href='mailto:chris@codinginpublic.dev'
				style='primary'
				text='Contact Me'
			/>
		</div>
	</section>
</MainLayout>
