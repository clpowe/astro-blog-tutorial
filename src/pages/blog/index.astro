---
import MainLayout from '../../layouts/MainLayout.astro'
import PostCard from '../../components/PostCard.astro'

// utils imports
import { formatBlogPost } from '../../js/utils'

const allPosts = await Astro.glob('./*.md')
const formattedPost = formatBlogPost(allPosts)
---

<MainLayout title='My Blog' description='My astro Blog'>
	<section class='container' aria-label='New Blog Posts'>
		<h1 class='h2'>New Blog Posts</h1>
		{
			formattedPost.map((post) => (
				<PostCard frontmatter={post.frontmatter} url={post.url} tagType='h2' />
			))
		}
	</section>
</MainLayout>
